<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/background"
    android:paddingBottom="10dp" >


    <ImageButton
        android:id="@+id/imagebutton"
        android:layout_width="233dp"
        android:layout_height="137dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/customebutton"
        app:srcCompat="@drawable/batman"
        tools:ignore="ContentDescription,MissingConstraints,SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="313dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:text="SELECT INTROO CHARACTER"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:ignore="HardcodedText,MissingConstraints,SpUsage,TextSizeCheck"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="195dp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="237dp"
        android:layout_height="60dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/customebutton"
        android:backgroundTint="#E06FE4"
        android:hint="Can I Know Your Name Please..??"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

    <EditText
        android:id="@+id/age"
        android:layout_width="250dp"
        android:layout_height="71dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/customebutton"
        android:backgroundTint="#7662D1"
        android:hint="How Long Have You Been Around..??"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username"
        tools:ignore="Autofill,HardcodedText,SpUsage,TextSizeCheck,TextContrastCheck" />

    <EditText
        android:id="@+id/bio"
        android:layout_width="256dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/customebutton"
        android:backgroundTint="#54EDB0"
        android:hint="Things That I Need To Know About You..??"
        android:imeOptions="actionDone"
        android:inputType="textCapSentences|textNoSuggestions|textMultiLine"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/age"
        tools:ignore="Autofill,HardcodedText,SpUsage,TextSizeCheck,TextContrastCheck" />

    <EditText
        android:id="@+id/introo_id"
        android:layout_width="241dp"
        android:layout_height="63dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/customebutton"
        android:backgroundTint="#D1CB5A"
        android:hint="Enter Unique ID..??"
        android:imeOptions="actionDone"
        android:inputType="textCapSentences|textNoSuggestions|textMultiLine"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.967"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bio"
        tools:ignore="Autofill,HardcodedText,SpUsage,TextSizeCheck,TextContrastCheck" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#DA1168"
        android:enabled="false"
        android:text="Submit"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />


</androidx.constraintlayout.widget.ConstraintLayout>